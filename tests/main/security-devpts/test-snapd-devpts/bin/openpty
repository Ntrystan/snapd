#!/usr/bin/python3
import os
import pty
import sys

files = os.listdir('/dev/pts')
if 'ptmx' not in files or len(files) != 1:
    print(f"{files} != ['ptmx']")
    sys.exit(1)

pty.openpty()
files = os.listdir('/dev/pts')
if 'ptmx' not in files or '0' not in files or len(files) != 2:
    print(f"{files} != ['0', 'ptmx']")
    sys.exit(1)
print(f"PASS: {files}")

sys.exit(0)
